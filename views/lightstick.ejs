	<div class="row">
		<div class="col-lg-12">
			<div class="page-content">
				<!-- ***** Featured Start ***** -->
				<div class="row">
					<div class="col-lg-12">
						<div class="feature-banner header-text">
							<div class="row">
								<div class="col-lg-4">
									<img src="images/inthesoop.jpg" alt="" height="450" style="border-radius: 23px" />
								</div>
								<div class="col-lg-8">
									<iframe
										style="border-radius: 23px"
										width="655"
										height="450"
										src="https://www.youtube.com/embed/r6WbbU_lLCA"
										title="YouTube video player"
										frameborder="0"
										allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
										allowfullscreen
									></iframe>
									<!-- <img src="assets/images/feature-right.jpg" alt="" style="border-radius: 23px" />
