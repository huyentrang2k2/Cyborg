<%- include('component/header') -%>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-content">
				<!-- ***** Banner Start ***** -->
				<div class="main-banner">
					<div class="row">
						<div class="col-lg-12">
							<div class="header-text">
								<img class="nature" src="images/aespa.jpg" width="100%" />
								<img class="nature" src="images/blackpink.jpg" width="100%" />
								<img class="nature" src="images/bts.jpg" width="100%" />
							</div>
						</div>
					</div>
				</div>
				<!-- ***** Banner End ***** -->

				<!-- ***** Most Popular Start ***** -->
				<div class="most-popular">
					<div class="row">
						<div class="col-lg-12">
							<div class="heading-section">
								<h4><em>Featured products</em></h4>
							</div>
							<div class="row" id="row"></div>
						</div>
					</div>
				</div>
				<!-- ***** Most Popular End ***** -->

				<!-- ***** Gaming Library Start ***** -->
				<div class="gaming-library">
					<div class="col-lg-12">
						<div class="heading-section">
							<h4><em>Latest product</em></h4>
						</div>
						<div class="row" id="collum"></div>
					</div>
				</div>
				<!-- ***** Gaming Library End ***** -->
			</div>
		</div>
	</div>
</div>
<%- include('component/footer') -%>
<script>
	const getData = () => {
		axios
			.get('http://localhost:3000/api/products')
			.then((response) => {
				console.log(response.data);
				const row = document.querySelector('#row');
				response.data.forEach((item, index) => {
					const div = document.createElement('div');
					div.className = 'col-lg-3 col-sm-6';
					div.innerHTML = `
				<div class="item">
					<img src="/images/${item.images}" alt="" />
					<h4>${item.name}<br /><span>${item.price}VND</span></h4>
				</div>`;
					row.appendChild(div);
				});
			})
			.catch((err) => console.log(err.response.data.message));
	};

	getData();

	const Data = () => {
		axios
			.get('http://localhost:3000/api/productAsc')
			.then((response) => {
				console.log(response.data);
				const row = document.querySelector('#collum');
				response.data.forEach((item, index) => {
					const div = document.createElement('div');
					div.className = 'col-lg-3 col-sm-6';
					div.innerHTML = `
				<div class="item">
					<img src="/images/${item.images}" alt="" />
					<h4>${item.name}<br /><span>${item.price}VND</span></h4>
				</div>`;
					row.appendChild(div);
				});
			})
			.catch((err) => console.log(err.response.data.message));
	};

	Data();
</script>
<script src="https://www.w3schools.com/lib/w3.js"></script>
